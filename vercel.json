{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "builds": [
    {
      "src": "build/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/build/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1", "sfo1"],
  "functions": {
    "build/server/index.js": {
      "maxDuration": 30
    }
  }
} 